@model aspTurismoJapon.Models.ViewModels.Usuarios_ViewModel
@{
    ViewData["Title"] = "Agregar";
    Layout = "_Layout";
}

<section class="class_acciones">
    <table>
        <tbody>
        <td>
            <h1>Administrador - Usuarios</h1>
        </td>
        <td>
            <a href="~/Administrador/Usuarios">Agregando Usuario</a>
        </td>
        </tbody>
    </table>
</section>

<section class="class_agregar_editar">
    <form action="~/Administrador/Usuarios/Agregar" method="post">
        <label for="">Nombre:</label>
        <input type="text" asp-for="Nombre">

        <label for="">Contraseña:</label>
        <input type="text" asp-for="Contrasena">

        <label for="">Tipo:</label>
        <select asp-for="Rol">
            <option value="user">Seleccione un Tipo (default user)</option>
            <option value="user">Usuario</option>
            <option value="Admin">Administrador</option>
        </select>

        <section class="class_agregar_editar_acciones">
            <table>
                <td>
                    <input type="submit" value="Agregar">
                </td>
                <td>
                    <a href="~/Administrador/Usuarios">Cancelar</a>
                </td>
            </table>
        </section>
    </form>
</section>

