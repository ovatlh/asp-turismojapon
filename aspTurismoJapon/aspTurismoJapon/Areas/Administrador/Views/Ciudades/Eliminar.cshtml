@model aspTurismoJapon.Models.Ciudades
@{
    ViewData["Title"] = "Eliminar";
    Layout = "_Layout";
}

<section class="class_acciones">
    <table>
        <tbody>
        <td>
            <h1>Administrador - Ciudades</h1>
        </td>
        <td>
            <a href="~/Administrador/Ciudades">Eliminando Ciudad</a>
        </td>
        </tbody>
    </table>
</section>

<form action="~/Administrador/Ciudades/Eliminar" method="post">
    <section class="class_eliminacion">
        <input type="hidden" asp-for="Id" />
        <h1>¿ Estas seguro de querer eliminar esta ciudad ?</h1>

        <b>
            <p>@Model.Nombre</p>
        </b>

        <table>
            <td>
                <input type="submit" value="Eliminar">
            </td>
            <td>
                <a href="~/Administrador/Ciudades">Cancelar</a>
            </td>
        </table>
    </section>
</form>