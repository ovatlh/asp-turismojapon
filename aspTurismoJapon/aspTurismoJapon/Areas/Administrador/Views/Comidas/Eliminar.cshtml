@model  aspTurismoJapon.Models.Comidas
@{
    ViewData["Title"] = "Eliminar";
    Layout = "_Layout";
}

<section class="class_acciones">
    <table>
        <tbody>
        <td>
            <h1>Administrador - Comidas</h1>
        </td>
        <td>
            <a href="~/Administrador/Comidas">Eliminando Comida</a>
        </td>
        </tbody>
    </table>
</section>

<form action="~/Administrador/Comidas/Eliminar" method="post">
    <section class="class_eliminacion">
        <input type="hidden" asp-for="Id" />

        <h1>¿ Estas seguro de querer eliminar esta comida ?</h1>

        <b>
            <p>@Model.Nombre</p>
        </b>

        <table>
            <td>
                <input type="submit" value="Eliminar">
            </td>
            <td>
                <a href="~/Administrador/Comidas">Cancelar</a>
            </td>
        </table>
    </section>
</form>