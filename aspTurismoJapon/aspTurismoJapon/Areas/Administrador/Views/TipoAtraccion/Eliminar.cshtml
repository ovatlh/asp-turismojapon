@model  aspTurismoJapon.Models.Tipoatraccion
@{
    ViewData["Title"] = "Eliminar";
    Layout = "_Layout";
}

<section class="class_acciones">
    <table>
        <tbody>
        <td>
            <h1>Administrador - Tipo de Atracciones</h1>
        </td>
        <td>
            <a href="~/Administrador/TipoAtraccion">Eliminando Tipo de Atraccion</a>
        </td>
        </tbody>
    </table>
</section>

<form action="~/Administrador/TipoAtraccion/Eliminar" method="post">
    <section class="class_eliminacion">
        <input type="hidden" asp-for="Id" />
        <h1>¿ Estas seguro de querer eliminar este tipo de atraccion ?</h1>

        <b>
            <p>@Model.Tipo</p>
        </b>

        <table>
            <td>
                <input type="submit" value="Eliminar">
            </td>
            <td>
                <a href="~/Administrador/TipoAtraccion">Cancelar</a>
            </td>
        </table>
    </section>
</form>